@model Test.Models.InsuranceСar;


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - КАСКО</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/car.css" />
</head>

<body>
    <div id="order">
        <div class="container">
            <form asp-action="create" asp-controller="home" class="form-order">
                <div class="form-group">
                    <input  type="text"  asp-for="NSF" class="form-control" placeholder="Прізвище Ім'я По батькові" />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Email" class="form-control" placeholder="E-mail" />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Phone" class="form-control" placeholder="Телефон" />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="City" class="form-control"  placeholder="Місто"/>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="ModelCar" class="form-control" placeholder="Модель авто" />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="CarYear" class="form-control" placeholder="Рік випуску авто" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Відправити" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div class="container">
        <div id="explanation">

            <div class="row">
                <h1> Чому? Навіщо? </h1>

              

                <div class="resp ">
                
                    <br />
                    <ul>
                        <li>
                            Просте та швидке оформлення

                        </li>
                        <li>
                            Виплата на СТО, без візиту до страхової компанії
                        </li>
                        <li>
                            Ремонт на сертифікованих СТО
                        </li>
                        <li>
                            Щодня ми виплачуємо по КАСКО понад 690 000 грн.
                        </li>
                    </ul>

                </div>

            </div>
        </div>
    </div>

   

</body>